<div class="card" style="height: 74vh;">
  <div class="card-body" style="background-color: #a58855;">
  <div class="row h-100">
      {# I create a 3 column section to display actions created in history #}
      <div class="col-3 h100" >
        <div class="card" style="height: 70vh; overflow-y: scroll;">
          <div class="card-body align-items-center">
            <div class="card-title">Actions</div>
            <hr>
            {# This is a seperate row to display and add option #}
            <div class="row my-2 mx-0">
                <div class="col px-0">
                  <a class="card hover btn btn-outline-primary " role="button" href="{{ url_for('actions_render') }}" style="text-decoration: none; height: 150px;"">
                    <div class="card-body d-flex">
                      <h5 class="card-title m-auto">Add One</h5>
                    </div>
                  </a>
                </div>
            </div>
            {# Here the cards are being rendered with a href link to its designated detail page where the user can edit the data #}
            {% for card in main_data %}
            <div class="row my-2 mx-0">
                <div class="col px-0">
                  <a class="card hover" role="button" href="{{ url_for('actions_detail_render', id=card._id) }}" style="text-decoration: none; height: 150px;"">
                    <div class="card-body">
                      <h5 class="card-title">{{ card.name }}</h5>
                      <hr>
                      <p class="card-text text-truncate">{{ card.description }}</p>
                    </div>
                  </a>
                </div>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
      {# This column takes the remaining space from the width and it acts as the console for the user #}
      <div class="col">
        <div class="card h-100">
          <div class="card-body h-100">
            {% if is_detail %}
            {# This will show the detail form #}
            {% include "content/actions/detail.jinja2" %}
            {% else %}
            {# This will show the add form #}
            {% include "content/actions/add.jinja2" %}
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>