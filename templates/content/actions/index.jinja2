<div class="card" style="height: 70vh;">
  <div class="card-body" >
  <div class="row h-100">
      <div class="col-3 h100" >
        <div class="card" style="height: 65vh; overflow-y: scroll;">
          <div class="card-body align-items-center">
            <div class="card-title">Actions</div>
            <hr>
            <div class="row my-2 mx-0">
                <div class="col px-0">
                  <a class="card hover btn btn-outline-primary " role="button" href="{{ url_for('actions_render') }}" style="text-decoration: none; height: 150px;"">
                    <div class="card-body d-flex">
                      <h5 class="card-title m-auto">Add One</h5>
                    </div>
                  </a>
                </div>
            </div>
            {% for card in main_data %}
            <div class="row my-2 mx-0">
                <div class="col px-0">
                  <a class="card hover" role="button" href="{{ url_for('actions_detail_render', id=card._id) }}" style="text-decoration: none; height: 150px;"">
                    <div class="card-body">
                      <h5 class="card-title">{{ card.name }}</h5>
                      <hr>
                      <p class="card-text text-truncate">{{ card.description }}</p>
                    </div>
                  </a>
                </div>
            </div>
            {% endfor %}
          </div>
        </div>
      </div>
      <div class="col">
        <div class="card h-100">
          <div class="card-body h-100">
            {% if is_detail %}
            {% include "content/actions/detail.jinja2" %}
            {% else %}
            <form action="/actions" method='post'>
              <input type="hidden" name="_method" value="post">
              <div class="mb-3 form-group">
                <label for="action_name">Name:</label>
                <input type="text" name="name" id="action_name"  class="form-control">
              </div>
              <div class="mb-3 form-group">
                <label for="description">Description:</label>
                <textarea name="description" id="description" class="form-control" rows="13"></textarea>
              </div>
              
              <div class="card-footer">
                <input type="submit" value="Add" class="btn btn-primary float-right">
              </div>
              
            </form>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>