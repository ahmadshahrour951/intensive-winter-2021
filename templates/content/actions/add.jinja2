<form action="/actions" method='post'>
  <input type="hidden" name="_method" value="post">
  <div class="mb-3 form-group">
    <label for="action_name">Name:</label>
    <input type="text" name="name" id="action_name"  class="form-control">
  </div>
  <div class="mb-3 form-group">
    <label for="description">Description:</label>
    <textarea name="description" id="description" class="form-control" rows="13"></textarea>
  </div>
  
  <div class="card-footer">
    <input type="submit" value="Add" class="btn btn-primary float-right">
  </div>
  
</form>