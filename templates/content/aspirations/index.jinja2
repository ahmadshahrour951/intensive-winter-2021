<h2 class="w-50 mx-auto">What aspiring characteristics would you like to have? (it could be Couragous, Generous...)</h2>
<h3 class="w-50 mx-auto">Define at least one<h3>
<div class="row row-cols-1 row-cols-3 g-4 mt-4">
  <div class="col" style="height: 150px;">
    <!-- Button trigger modal -->
    <button class="btn btn-outline-primary h-100 w-100 rounded-lg shadow" type="button" data-bs-toggle="modal" data-bs-target="#addModal">
    Add One
    </button>

    <!-- Modal -->
    {% include "/content/aspirations/add_modal.jinja2" %}
  </div>
  {% for card in  main_data %}
      <div class="col" style="height: 150px;">
        <div class="card hover rounded-lg shadow h-100" data-bs-toggle="modal" data-bs-target="{{ '#modal_' ~ card._id }}">
            <div class="card-body">
                <h5 class="card-title">
                    {{ card.name }}
                </h5>
                <hr>
                <p class="card-text text-truncate">
                    {{ card.description }}
                </p>
            </div>
        </div>
      </div>
      <div class="modal fade" id="{{ 'modal_' ~ card._id }}">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-body">
              <form action="/aspirations" method="post">
                <input type="hidden" name="_method" value="patch" />
                <input type="hidden" name="_id" value="{{ card._id }}">
                <div class="mb-3">
                  <label for="name" class="col-form-label">Name:</label>
                  <input type="text" id="name" name="name" value="{{ card.name }}" class="form-control">
                </div>
                <div class="mb-3">
                  <label for="description" class="col-form-label">Description:</label>
                  <textarea class="form-control" id="description" name="description"  rows="13">{{ card.description }}</textarea>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" id="test" value="{{ card._id }}">Delete</button>
                  <input type="submit" value="Save" name="save" class="btn btn-primary">
              </div>
              </form>
            </div>
          </div>
        </div>
      </div>
  {% endfor %}

</div>
